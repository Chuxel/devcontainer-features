{
	"features": [
		{
			"id": "vscode",
			"name": "Visual Studio Code",
			"options": {
				"version": {
					"type": "string",
					"enum": ["latest"],
					"default": "latest",
					"description": "VS Code version (currently ignored)"
				},
				"edition": {
					"type": "string",
					"enum": [ "stable", "insiders", "both" ],
					"default": "stable",
					"description": "VS Code edition to install"
				}
			}
		},
		{
			"id": "googlechrome",
			"name": "Google Chrome",
			"options": {
				"version": {
					"type": "string",
					"enum": ["latest"],
					"default": "latest",
					"description": "Chrome version (currently ignored)"
				}
			}
		},
		{
			"id": "packcli",
			"name": "Buildpacks.io pack CLI",
			"options": {
				"version": {
					"type": "string",
					"proposals": ["latest"],
					"default": "latest",
					"description": "Pack CLI version"
				},
				"targetPath": {
					"type": "string",
					"proposals": ["/usr/local"],
					"default": "/usr/local",
					"description": "Target install path"
				}
			}
		},
		{
			"id": "python",
			"name": "Python",
			"options": {
				"version": {
					"type": "string",
					"proposals": ["latest"],
					"default": "latest",
					"description": "Python version"
				},
				"targetPath": {
					"type": "string",
					"proposals": ["/usr/local"],
					"default": "/usr/local",
					"description": "Target install path"
				}
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		},
		{
			"id": "nodejs",
			"name": "Node.js",
			"options": {
				"version": {
					"type": "string",
					"proposals": [ "lts", "latest", "16", "14", "12" ],
					"default": "lts",
					"description": "Select or enter a Node.js version to install"
				},
				"installYarn": {
					"type": "boolean",
					"default": true,
					"description": "Install yarn"
				},
				"installNvm": {
					"type": "boolean",
					"default": true,
					"description": "Install nvm"
				},
				"nodeGypDependencies": {
					"type": "boolean",
					"default": true,
					"description": "Install dependencies to compile native node modules (node-gyp)?"
				}
			},
			"extensions": ["dbaeumer.vscode-eslint"]
		},
		{
			"id": "buildpack-test",
			"name": "Test feature for buildpackify",
			"containerEnv": {
				"TEST": "true",
				"PATH": "/i/am/before:${PATH}:/i/am/after",
				"TEST2": "${TEST}"
			},
			"options": {
				"version": {
					"type": "string",
					"proposals": ["latest"],
					"default": "latest",
					"description": "Version"
				},
				"foo": {
					"type": "string",
					"proposals": ["foo"],
					"default": "foo",
					"description": "Foo"
				},
				"targetPath": {
					"type": "string",
					"proposals": ["/usr/local"],
					"default": "/usr/local",
					"description": "Target install path"
				}
			}
		}
	]
}
