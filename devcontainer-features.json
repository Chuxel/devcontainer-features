{
	"features": [
		{
			"id": "vscode",
			"name": "Visual Studio Code",
			"options": {
				"version": {
					"type": "string",
					"enum": ["latest"],
					"default": "latest",
					"description": "VS Code version (currently ignored)"
				},
				"edition": {
					"type": "string",
					"enum": [ "stable", "insiders", "both" ],
					"default": "stable",
					"description": "VS Code edition to install"
				}
			}
		},
		{
			"id": "googlechrome",
			"name": "Google Chrome",
			"options": {
				"version": {
					"type": "string",
					"enum": ["latest"],
					"default": "latest",
					"description": "Chrome version (currently ignored)"
				}
			}
		},
		{
			"id": "packcli",
			"name": "Buildpacks.io pack CLI",
			"options": {
				"version": {
					"type": "string",
					"proposals": ["latest"],
					"default": "latest",
					"description": "Pack CLI version"
				},
				"targetPath": {
					"type": "string",
					"proposals": ["/usr/local"],
					"default": "/usr/local",
					"description": "Target install path"
				}
			}
		},
		{
			"id": "buildpack-test",
			"name": "Test feature for buildpackify",
			"containerEnv": {
				"TEST": "true",
				"PATH": "/i/am/before:${containerEnv:PATH}:/i/am/after",
				"TEST2": "${containerEnv:TEST}"
			},
			"options": {
				"version": {
					"type": "string",
					"proposals": ["latest"],
					"default": "latest",
					"description": "Version"
				},
				"foo": {
					"type": "string",
					"proposals": ["foo"],
					"default": "foo",
					"description": "Foo"
				},
				"targetPath": {
					"type": "string",
					"proposals": ["/usr/local"],
					"default": "/usr/local",
					"description": "Target install path"
				}
			}
		}
	]
}
