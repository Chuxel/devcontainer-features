{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
			"args": [
				"build",
				"${workspaceFolder}/../test/out/layers",
				"${workspaceFolder}/../test/out/platform",
				"${workspaceFolder}/../test/assets/buildpack-plan.toml"
			],
			"env": {
				"CNB_PLATFORM_API": "0.8",
				"CNB_STACK_ID": "com.chuxel.stacks.test.bionic",
				"CNB_BUILDPACK_DIR":"${workspaceFolder}/../test/out/buildpack",
				"BP_CONTAINER_FEATURE_PACKCLI": "true",
				"BP_CONTAINER_FEATURE_BUILD_MODE": "devcontainer"
			},
			"cwd": "${workspaceFolder}/../test/test-project",
			"preLaunchTask": "test-prep"
		},
		{
            "name": "Detect command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
			"args": [
				"detect",
				"${workspaceFolder}/../test/out/platform",
				"${workspaceFolder}/../test/out/plan.toml"
			],
			"env": {
				"CNB_PLATFORM_API": "0.8",
				"CNB_STACK_ID": "com.chuxel.stacks.test.bionic",
				"CNB_BUILDPACK_DIR":"${workspaceFolder}/../test/out/buildpack",
				"BP_CONTAINER_FEATURE_PACKCLI": "true",
				"BP_CONTAINER_FEATURE_BUILD_MODE": "devcontainer"
			},
			"cwd": "${workspaceFolder}/../test/test-project",
			"preLaunchTask": "test-prep"
		},
		{
            "name": "Create command",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
			"args": [
				"create",
				"${workspaceFolder}/../..",
				"${workspaceFolder}/../test/out/buildpack"
			],
			"cwd": "${workspaceFolder}/../..",
		}
    ]
}